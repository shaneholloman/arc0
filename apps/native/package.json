{
  "name": "@arc0/native",
  "main": "./index.js",
  "version": "0.1.0",
  "scripts": {
    "postinstall": "./scripts/patch-expect-webdriverio.sh",
    "dev": "expo start -c --lan",
    "android": "expo start -c --android",
    "ios": "expo start -c --ios",
    "web": "expo start -c --web",
    "build:android": "expo run:android",
    "build:android:release": "cd android && ./gradlew assembleRelease",
    "build:ios": "expo run:ios",
    "install:android": "adb devices | tail -n +2 | cut -sf 1 | xargs -I {} adb -s {} install android/app/build/outputs/apk/debug/app-debug.apk",
    "install:android:release": "adb devices | tail -n +2 | cut -sf 1 | xargs -I {} adb -s {} install android/app/build/outputs/apk/release/app-release.apk",
    "install:ios": "APP=$(find ~/Library/Developer/Xcode/DerivedData -name 'Arc0.app' -path '*Debug-iphonesimulator*' -type d -print -quit) && xcrun simctl list devices | grep -oE '[A-F0-9-]{36}.*Booted' | grep -oE '[A-F0-9-]{36}' | xargs -I {} xcrun simctl install {} \"$APP\"",
    "deeplink:ios": "xcrun simctl openurl booted 'arc0://connect?url=https%3A%2F%2Ftest.t.arc0.ai&code=ABCD1234'",
    "deeplink:android": "adb shell \"am start -a android.intent.action.VIEW -d 'arc0://connect?url=https%3A%2F%2Ftest.t.arc0.ai&code=ABCD1234'\"",
    "clean": "rm -rf .expo node_modules",
    "lint": "expo lint && npx expo-doctor",
    "lint:fix": "expo lint --fix",
    "type:check": "tsc --noEmit",
    "doctor": "npx expo-doctor",
    "appium": "appium",
    "test:e2e:mobile": "wdio run wdio.conf.ts",
    "test:e2e:web": "playwright test --config=playwright/playwright.config.ts",
    "test:e2e:web:headed": "playwright test --config=playwright/playwright.config.ts --headed",
    "test:e2e:web:ui": "playwright test --config=playwright/playwright.config.ts --ui",
    "playwright:install": "playwright install chromium"
  },
